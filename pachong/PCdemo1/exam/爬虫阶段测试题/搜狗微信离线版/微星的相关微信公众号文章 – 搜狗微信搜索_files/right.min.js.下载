(function(){var d=$("#hotword_tpl").html();juicer.register("encode",encode);juicer.register("cutLength",cutLength);juicer.register("getRange",function(a,b){return 100-a*b+"%"});juicer.register("indexPlus",function(a){return++a});juicer.register("unescapeWord",function(a){return unescape(a)});juicer.register("buildQueryLink",function(a){return"/weixin?type=2&ie=utf-8&s_from=hotnews&query="+encodeURIComponent(unescape(a))});(function(){var a=$("#account"),b=a.find(".gzh-box"),c=b.length;0<c&&(1==c?b.find("dl").show():2!=c&&3!=c||a.find(".gzh-list").html(b).show(),a.show())})();(function(){$.ajax({url:"/pcindex/pc/web/web.js?t="+(new Date).getTime(),dataType:"json",success:function(a){a&&a.topwords&&a.topwords.length&&(a={hotwordList:a.topwords},$(".hot-news").append(juicer(d,a)),$("#hotword").show())},error:function(){}})})()})();